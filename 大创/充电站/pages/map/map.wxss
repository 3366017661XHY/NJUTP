/* 新增样式 */
.card-style {
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.08);
  margin: 24rpx;
  padding: 32rpx;
}

.panel-header {
  border-bottom: 2rpx solid #f5f5f5;
  padding-bottom: 24rpx;
  margin-bottom: 32rpx;
}

.title {
  font-size: 36rpx;
  color: #2d3436;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #7f8c8d;
}

.facility-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.facility-item {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
}

.facility-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.facility-info {
  display: flex;
  flex-direction: column;
}

.facility-count {
  font-size: 32rpx;
  color: #2d3436;
  font-weight: 500;
}

.facility-name {
  font-size: 24rpx;
  color: #7f8c8d;
}

.input-panel {
  border-top: 2rpx solid #f5f5f5;
  padding-top: 32rpx;
}

.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  display: block;
  font-size: 30rpx;
  color: #636e72;
  margin-bottom: 16rpx;
}

.styled-input {
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #dfe6e9;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #2d3436;
}

.styled-input:focus {
  border-color: #74b9ff;
}

.result-card {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 32rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}

.result-label {
  font-size: 28rpx;
  color: #636e72;
}

.result-value {
  font-size: 32rpx;
  font-weight: 500;
  color: #2d3436;
}

.highlight {
  color: #0984e3;
  font-weight: 600;
}

.main-map {
  border-radius: 16rpx 16rpx 0 0;
}